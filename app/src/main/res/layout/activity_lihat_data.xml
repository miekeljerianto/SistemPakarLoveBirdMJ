<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="com.apps.miekeljerianto.belajarpakar.ui_admin.LihatData">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     <TextView
         android:id="@+id/tampil_kd"
         android:layout_width="fill_parent"
         android:layout_height="match_parent"
         android:text=""/>
    </LinearLayout>
        <TextView
            android:id="@+id/text_tampil1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_rounded"/>

     <!-- TAMPIL NAMA GEJALA -->
        <RelativeLayout
            android:layout_below="@+id/text_tampil1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="true">
            <TextView
                android:id="@+id/tampil_nm_gjl"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"

                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="19dp" />
        </RelativeLayout>
            <TextView
                android:id="@+id/text_tampil2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:padding="10dp"
                android:textSize="19sp"
                android:background="@drawable/ic_rounded"
                android:layout_below="@+id/text_tampil1"/>







     <TextView
         android:id="@+id/text_penyebab"
         android:layout_width="fill_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_marginTop="18dp"
         android:layout_below="@+id/text_tampil2"
         android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/text_tampil_Getpenyebab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="19sp"
                android:layout_below="@id/text_tampil2"
                android:background="@drawable/ic_bg_penyebab"
                android:layout_marginTop="40dp"/>


    <TextView
        android:id="@+id/text_solusi"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/text_tampil_Getpenyebab"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />
            <TextView
                android:id="@+id/text_tampil_Getsolusi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="50dp"
                android:textSize="19sp"
                android:background="@drawable/ic_bg_solusi"
                android:layout_below="@+id/text_tampil_Getpenyebab"/>
            </RelativeLayout>

</ScrollView>
